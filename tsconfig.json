{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false, //隐含any类型的表达式和声明的错误报告
    "jsx": "react-jsx",
    "baseUrl": ".", // 指定编译目录,默认为当前目录,
    "paths": {
      "@/*": [
        "src/*"
      ] // 将 @ 开头的文件解析到 src 目录下
    },
    "types": [
      "vite-plugin-svg-icons/client"
    ]
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}